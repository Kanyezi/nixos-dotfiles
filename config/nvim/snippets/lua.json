{
  "lua_function": {
    "prefix": "func",
    "body": ["local ${1:name} = function(${2:args})", "\t$0", "end"],
    "description": "Lua 函数"
  },
  "lua_if": {
    "prefix": "if",
    "body": ["if ${1:condition} then", "\t$0", "end"],
    "description": "Lua if 语句"
  },
  "lua_for": {
    "prefix": "for",
    "body": ["for ${1:i} = ${2:1}, ${3:10} do", "\t$0", "end"],
    "description": "Lua for 循环"
  },
  "lua_require": {
    "prefix": "req",
    "body": ["local ${2:module} = require(\"${1:module}\")"],
    "description": "Lua require"
  }
}
